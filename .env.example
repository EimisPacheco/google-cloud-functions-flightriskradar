# FlightRiskRadar Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ===============================================
# FRONTEND ENVIRONMENT VARIABLES (Vite)
# ===============================================
# Vite requires VITE_ prefix for frontend variables

# Cloud Functions
VITE_CLOUD_FUNCTION_URL=https://us-central1-YOUR-PROJECT-ID.cloudfunctions.net/flight-risk-analysis
VITE_ANALYTICS_BASE_URL=https://us-central1-YOUR-PROJECT-ID.cloudfunctions.net
VITE_AIRLINE_PERFORMANCE_URL=https://us-central1-YOUR-PROJECT-ID.cloudfunctions.net/airline-performance-analysis
VITE_AIRPORT_PERFORMANCE_URL=https://us-central1-YOUR-PROJECT-ID.cloudfunctions.net/airport-performance-analysis
VITE_COMMUNITY_FEED_URL=https://us-central1-YOUR-PROJECT-ID.cloudfunctions.net/community-feed-backend

# External APIs
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here
VITE_OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# SerpAPI (Flight Search)
VITE_SERPAPI_KEY=your_serpapi_key_here
VITE_SERPAPI_BASE_URL=https://serpapi.com/search.json

# Assets
VITE_AIRCRAFT_IMAGES_BASE_URL=https://storage.googleapis.com/YOUR-BUCKET
VITE_AIRCRAFT_IMAGES_BUCKET=your-aircraft-images-bucket

# Feature Flags
VITE_ENABLE_TRANSLATION=true
VITE_ENABLE_WEATHER=true
VITE_ENABLE_INSURANCE=true
VITE_ENABLE_REALTIME=true

# ===============================================
# BACKEND ENVIRONMENT VARIABLES (Cloud Functions)
# ===============================================
# These are used in cloud-functions/flight-risk-analysis/.env.local

# Google Cloud
GCP_PROJECT=your-project-id-here
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Flight Data
SERPAPI_API_KEY=your_serpapi_key_here

# Elasticsearch
ELASTICSEARCH_URL=https://your-elasticsearch-project.es.region.gcp.elastic.cloud:443
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key_here

# Optional: Logging
LOG_EXECUTION_ID=true
